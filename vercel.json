{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {"path": "/api/cron/refresh-observations-ca", "schedule": "0 6 * * *"},
    {"path": "/api/cron/refresh-observations-or", "schedule": "2 6 * * *"},
    {"path": "/api/cron/refresh-observations-wa", "schedule": "4 6 * * *"}
  ]
}
